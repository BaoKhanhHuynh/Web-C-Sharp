                    <h6 class="mb-0">Worldwide Sales</h6>
                </div>
                <canvas id="worldwide-sales"></canvas>
            </div>
        </div>
        <div class="col-sm-12 col-xl-6">
            <div class="bg-light text-center rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">Product</h6>
                </div>
                <canvas id="salse-revenue"></canvas>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    $(document).ready(function () {
        $.ajax({
            url: '/admin/Home/GetDataOrder',
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                var labels = data.map(item => item.year);
                var values = data.map(item => item.value);

                var ctx1 = $("#worldwide-sales").get(0).getContext("2d");
                var myChart1 = new Chart(ctx1, {
                    type: "bar",
                    data: {
                        labels: labels,
                        datasets: [{
                            label: "Order Revenue",
                            data: values,
                            backgroundColor: "rgba(0, 156, 255, .7)"
                        }]
                    },
                    options: {
                        responsive: true
                    }
                });
            },
            error: function (xhr, status, error) {
                console.error("Error loading data for Worldwide Sales Chart:", error);
            }
        });
    });
    $(document).ready(function () {
        $.ajax({
            url: '/admin/Home/GetDataProduct',
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                var labels = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
                var values = new Array(12).fill(0);

                data.forEach(function (item) {
                    values[item.month - 1] = item.productCount;
                });

                var ctx2 = $("#salse-revenue").get(0).getContext("2d");
                var myChart2 = new Chart(ctx2, {
                    type: "bar",
                    data: {
                        labels: labels,
                        datasets: [{
                            label: "Product Count",
                            data: values,
                            backgroundColor: "rgba(0, 156, 255, .5)"
                        }]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            },
            error: function (xhr, status, error) {
                console.error("Error loading data for Sales & Revenue Chart:", error);
            }
        });
    });


</script>
